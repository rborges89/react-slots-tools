{
  "name": "@burning89/react-slots-tools",
  "version": "0.1.0",
  "description": "Hook to extract and consume named slots from children in React (Vue/Svelte/Web Components style)",
  "license": "MIT",
  "author": "Ramon Borges de Leon",
  "repository": {
    "type": "git",
    "url": "https://github.com/rborges89/react-slots-tools.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "keywords": [
    "react",
    "slots",
    "template",
    "useSlot",
    "slot-name",
    "slots in react",
    "vue slots in react",
    "svelte slots in react",
    "web component slots in react"
  ],
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.5.0",
    "tsup": "^8.0.0",
    "vitest": "^2.0.0",
    "@testing-library/react": "^16.0.0",
    "jsdom": "^24.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:ui": "vitest",
    "prepublishOnly": "npm run build && npm run test"
  }
}
